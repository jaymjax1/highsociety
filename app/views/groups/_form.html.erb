  <div class="container">
    <h1></h1>
    <hr>
    <div class="row">
      <!-- left column -->
      <div class="col-md-3">
        <div class="text-center">
          <img src="https://placehold.it/200x100" class="" alt="avatar">
          <h6>Upload a different photo...</h6>

          <input type="file" class="form-control">
        </div>
      </div>

      <!-- edit form column -->
      <div class="col-md-9 personal-info">
        <%= bootstrap_form_for(@group) do |f| %>
        <% if @group.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@group.errors.count, "error") %> prohibited this group from being saved:</h2>

          <ul>
            <% group.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
          </ul>
        </div>
        <% end %>
        <h2>Group Info</h2>
        <div class="col-xs-8 col-xs-offset-2">
          <div class="field">
            <%= f.text_field :name %>
          </div>

          <div class="field">
            <%= f.text_field :description %>
          </div>

          <div class="field">
            <%= f.text_field :location %>
          </div>

          <div class="field">
            <%= f.text_field :owner, placeholder: "#{current_user.username}"  %>
          </div>

          <div class="field">
            <%= f.text_field :background_image %>
          </div>

          <div class="actions">
            <%= f.submit %>
          </div>
        </div>

      </div>
    </div>
  </div>
  <hr>
  <% end %>