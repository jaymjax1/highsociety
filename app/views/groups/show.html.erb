<% provide(:title, "#{@group.name}") %>
  <div class="container">
    <div class="fb-profile">
      <img align="left" class="fb-image-lg" src="http://placehold.it/2050x350" alt="Profile image example"/>
      <img align="left" class="fb-image-profile thumbnail" src="http://placehold.it/200x200" alt="Profile image example"/>
    </div>
  </div> 
  <div class= "container formpadding">
    <div class= "row">
      <!-- Left side -->
      <div class= "container col-xs-3">
        <div class = "row">
          <div class="panel panel-default col-xs-12">
            <div class="panel-body">
              <div class="row">
                <div class="panel panel-default">
                  <!-- Default panel contents -->
                  <!-- List group -->
                  <ul class="list-group">
                    <li class="list-group-item"><%= link_to 'Home', root_path %></li>
                    <li class="list-group-item"><%= link_to 'My Profile', user_path(current_user) %></li>
                    <li class="list-group-item"><%= link_to 'My Groups', mygroup_path(current_user) %></li>
                    <li class="list-group-item"><%= link_to 'Create Group', new_group_path%></li>
                    <li class="list-group-item"><%= link_to 'Explore Groups', groups_path %></li>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        </div>

        <div class ="row">
          <form>
            <div class="form-group">
              <label for="comment">Comment:</label>
              <textarea class="form-control" rows="5" id="comment"></textarea>
            </div>
            <button type="submit" class="btn btn-default">Submit</button>
          </form>
        </div>
      </div>


      <!-- Right side -->
      <div class= "container col-xs-9">
        <div class = "row"> 
          <div class="panel panel-default col-xs-10 col-xs-offset-1">
            <h3 class=""> <%= @group.name%> 
              <% if @group.owner == current_user.username %>
              <span class ="medium-muted">  
                  <%= link_to "Edit", edit_group_path %> 
              </span>
              <%end%>
              <span class= "medium-muted">
              <%= button_to "Join Group", action: "join_group" %>
              </span>
            </h3>
            <hr>
            <div class="panel-body">
              <!-- activity blocks go here -->
              <% @group.posts.each do |post| %>
              <div class="panel panel-default">
                <div class="panel-heading">
                  <h3 class="panel-title"> <b> <%= post.title %> </b> 
                    <span class ="small-muted"> 
                      <i> posted by 
                        <%= link_to "#{post.user.username}", user_path(post.user) %> @ <%= post.created_at %> 
                      </i>
                    </span>
                  </h3>
                </div>
                <div class="panel-body">
                  <%= post.description %>
                </div>
              </div>
              <br>
              <% end %>
              <!-- activity blocks end here -->
            </div>
          </div>
        </div> 
      </div>
    </div>
  </div>