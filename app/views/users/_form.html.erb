  <div class="container">
    <h1>Edit Profile</h1>
    <hr>
    <div class="row">
      <!-- left column -->
      <div class="col-md-3">
        <div class="text-center">
          <img src="https://placehold.it/200x100" class="" alt="avatar">
          <h6>Upload a different photo...</h6>

          <input type="file" class="form-control">
        </div>
      </div>

      <!-- edit form column -->
      <div class="col-md-9">
        <%= bootstrap_form_for(@user) do |f| %>
        <% if @user.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being updated:</h2>

          <ul>
            <% user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
          </ul>
        </div>
        <% end %>
        <h2>Personal Info</h2>
        <div class="col-xs-8 col-xs-offset-2">
          <div class="field">
            <%= f.text_field :first_name %>
          </div>

          <div class="field">
            <%= f.text_field :last_name %>
          </div>

          <div class="field">
            <%= f.text_field :street  %>
          </div>

          <div class="field">
            <%= f.text_field :city %>
          </div>

          <div class="field">
            <%= f.text_field :state %>
          </div>

          <div class="field">
            <%= f.text_field :zip_code %>
          </div>

          <div class="field">
            <%= f.text_field :about_me%>
          </div>

          <div class="field">
            <%= f.text_field :profile_image %>
          </div>

          <div class="field">
            <%= f.text_field :background_image %>
          </div>

          <div class="actions">
            <%= f.submit %>
          </div>
        </div>

      </div>
    </div>
  </div>
  <br>
  <br>
  <% end %>