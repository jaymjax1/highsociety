<% provide(:title, "Home") %>
<div class= "container">
  <div class= "row">

    <!-- Left side -->
    <div class= "col-xs-3">
      <div class="row">
        <!-- Profile info panel -->
        <div class ="panel panel-default sharp-corners close-together"> 
          
          <div class="row">
            <!-- profile panel top info -->
            <div class="panel-body"> 
              <div class = "col-xs-4">
                <%= image_tag "#{current_user.profile_image}", class: "img-responsive img-rounded", align: "left" %> 
              </div>

              <div class = "col-xs-8 no-padding form-padding top-padding">
                <div class="col-xs-12 no-padding">
                  <b class="medium-muted"><%= current_user.first_name %> <%= current_user.last_name %> </b>
                </div>
                <div class= "col-xs-12 no-padding">
                  <span class="medium-muted text-muted"> @<%=current_user.username%> </span>
                </div>
              </div>
            </div>
            <!-- end of profile panel top info -->
          </div>
          <hr class="close-together">
          
          <div class="row">
            <!-- profile panel bottom info -->
            <div class="panel-body no-padding"> 
              <div class="row">
                <div class="col-xs-4 col-xs-offset-2"><span class="larger-text"><%= current_user.groups.count %></span> groups </div>
                <div class="col-xs-4"><span class="larger-text"><%= current_user.posts.count %></span> posts</div>
              </div>
            </div>
            <!-- end of profile panel bottom info -->
          </div>
        </div>
        <!-- end of profile info panel -->
      </div>
    </div>

    <!-- Right side -->
    <div class= "col-xs-8">
      <div class = "row"> 
        <div class="col-xs-11 col-xs-offset-1">
          
          <!-- Panel Cards -->
          <% @user.posts.each do |post| %>
          <div class="panel panel-default sharp-corners close-together">
            <div class="panel-heading transparent">
              <h3 class="panel-title"> 
                <%= post.title %> 
                <span class ="small-muted"> 
                  <i> posted in 
                    <%= link_to "#{post.group.name}", group_path(post.group) %> 
                  </i>
                </span>
              </h3>
            </div>
            <div class="panel-body">
              <div class="row">
                <div class="col-xs-1">
                  <%= image_tag "#{current_user.profile_image}", class: "post img-rounded", align: "left" %> 
                </div>
                <div class="col-xs-6">
                  <b><%= post.user.first_name%> <%= post.user.last_name%></b> <span class="text-muted">@<%= post.user.username%> &#183; <%= time_ago_in_words(post.created_at) %> </span><br> 
                  <span class="text-muted"><%= post.user.about_me%></span>
                </div>
              </div>
              <br>
              <div class="row">
                <div class="col-xs-1">
                  <div><%= link_to "#", class: "glyphicon glyphicon-chevron-up" do %> <% end -%></div>
                  <div>00</div>
                  <div><%= link_to "#", class: "glyphicon glyphicon-chevron-down" do %> <% end -%></div>
                </div>
                <div class="col-xs-10">
                  <%= post.description %>
                </div>
              </div>
            </div>
            <div class="panel-body">
              <div class="row">
                <div class="col-xs-10 col-xs-offset-1">
                  <div class="col-xs-1">
                    <%= link_to "", class: "glyphicon glyphicon-comment text-muted medium-muted" do %> <% end -%>
                  </div>

                  <div class="col-xs-1">
                    <%= link_to "", class: "glyphicon glyphicon-heart text-muted medium-muted" do %> <% end %>
                  </div>

                  <div class="col-xs-1">
                    <%= link_to "", class: "glyphicon glyphicon-share text-muted medium-muted" do %> <% end %>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <!-- End of Panel Cards -->
          <% end %>
          <!-- activity blocks end here -->
        </div>
      </div> 
    </div>
  </div>
</div>